[user]
	email = renato@hackerexperience.com
	name = Renato Massaro

[color]
	ui = auto

[core]
	pager = less -r
	excludesfile = ~/.gitignore
	compression = 7
	editor = emacsclient -a vim
	whitespace = trailing-space,space-before-tab

[branch]
	autosetuprebase = always

[push]
	default = nothing

[rerere]
	enabled = true
	autoupdate = true

[advice]
	statusHints = false

[merge]
	tool = xxdiff

[mergetool]
	prompt = false

[diff]
	tool = xxdiff
	algorithm = histogram
	renames = copies
	mnemonicprefix = true

[difftool]
	prompt = false

[alias]
	lsalias = "!git config -l | grep alias | grep -v lsalias | cut -c 7-"
	auth = "!ssh-add-custom git"
	pr = "!f() { git pull upstream pull/$1/head; }; f"
	a = add
	aa = add -A
	amend = commit --amend -C HEAD
	co = checkout
	cb = checkout -b
	df = diff
	dh = diff HEAD
	dic = diff --cached
	log1 = log --oneline
	tree = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	tree2 = log --graph --abbrev-commit --decorate --date=relative --all
	update = pull --rebase upstream master

